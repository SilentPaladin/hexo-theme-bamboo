.topArticle {
  width: 60%;
  margin: 20px auto;
  background: #fff;
  box-shadow: 0 1px 20px -6px rgba(0,0,0,.5);
  padding: 20px;
  padding-bottom: 40px;
  border-radius: 10px;
  box-sizing: border-box;
  h3 {
    color: #34495e;
  }
  .articles {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    .article-link {
      position: relative;
      flex: 0 0 30%;
      display: block;
      height: 180px;
      margin-top: 20px;
      box-shadow: 0 1px 20px -6px rgba(0,0,0,.5);
      border-radius: 10px;
      overflow: hidden;
      text-align: center;
      background: #000;
      .article {
        width: 100%;
        height: 100%;
        opacity: 0.6;
      }
      .title {
        color: #ffffff;
        font-weight: 700;
        font-size: 1.2em;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 20px;
      }
    }
  }
}