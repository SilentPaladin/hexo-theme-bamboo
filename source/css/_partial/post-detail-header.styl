.post-detail-header {
  width: 100%;
  overflow hidden;
  height: 50vh;
  background-color: $color-primary;
  background-size: cover; 
  background-position: center center;
  display: flex;
  align-items: center;
  .title {
    font-family: '楷体';
    font-size: 2.0rem;
    line-height: 1.3;
    color: $color-post-header-title;
    display: inline-block;
    width: 100%;
    text-align: center;
    font-weight: $color-post-header-title-font-weight;
  }
}
@media (max-width: 992px) {
  .post-detail-header {
    .title {
      // margin-left: calc(50%);
      // transform: translateX(-50%);
    }
  }
}
@media (max-width: 551px) {
  .post-detail-header {
    height: 30vh;
    .title {
      font-size: 1.5rem;
    }
  }
}